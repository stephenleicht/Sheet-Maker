{
  "compilerOptions": {
    "outDir": "./build/server",
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2018",
    "jsx": "react",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "pretty": true,
    "baseUrl": "./src",
    "lib": [
      "dom",
      "es2017"
    ]
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "./build"
  ]
}